            <Spinner
                android:id="@+id/spinner_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"
                android:layout_marginTop="10dp"

                android:spinnerMode="dropdown"
              />


            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletPadding="5dp">

                <EditText
                    android:id="@+id/edt_village_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/field_back"
                    android:textCursorDrawable="@drawable/cursor_colour"
                    android:hint="Choose Location"
                    android:drawableRight="@drawable/ic_menu_send"
                    android:padding="@dimen/padding1"
                    android:singleLine="true"
                    android:textColor="#000000"

                    android:textSize="@dimen/textsize2" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>



            <!--<com.wrapp.floatlabelededittext.FloatLabeledEditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<EditText-->
            <!--android:id="@+id/edt_village_name1"-->
