<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".FindDoctorFragment">
    <!--android:background="@mipmap/ic_splashscreen"-->
    <!-- TODO: Update blank fragment layout -->


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:float="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/spinner_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:spinnerMode="dropdown"
              />
            <TextView
                android:id="@+id/text_deices_name"
                style="@android:style/TextAppearance.Holo.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/field_back"
                android:textCursorDrawable="@drawable/cursor_colour"
                android:hint="Deices Name"
                android:padding="@dimen/padding1"
                android:singleLine="true"
                android:textColor="#000000"
                />

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:spinnerMode="dropdown"
                />

            <Spinner
                android:id="@+id/spinner_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:spinnerMode="dropdown"
                />
            <Spinner
                android:id="@+id/spinner_docter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:spinnerMode="dropdown"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/btn_search"
                android:background="@drawable/button_back"
                android:layout_margin="16dp"
                android:textColor="@color/white"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/txt_user_id"
                android:background="@drawable/button_back"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                android:visibility="gone"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/txt_timestamp"
                android:background="@drawable/button_back"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                android:visibility="gone"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/txt_latitude"
                android:background="@drawable/button_back"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                android:visibility="gone"


                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/txt_longitude"
                android:background="@drawable/button_back"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                android:visibility="gone"

                />






        </LinearLayout>

    </ScrollView>



</FrameLayout>
