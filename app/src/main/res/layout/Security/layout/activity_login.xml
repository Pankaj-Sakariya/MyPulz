<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding1">

        <EditText
            android:id="@+id/txtMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Number"
            android:background="@drawable/field_back"
            android:textColor="#000000"
            android:inputType="number"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_colour"
            android:textSize="@dimen/textsize2"
            android:padding="@dimen/padding1" />

        <!--android:text="pprasoon"-->
        <EditText
            android:id="@+id/txtOtpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:inputType="number"
            android:textCursorDrawable="@drawable/cursor_colour"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:password="true"
            android:singleLine="true"
            android:background="@drawable/field_back"
            android:textColor="#000000"
            android:textSize="@dimen/textsize2"
            android:padding="@dimen/padding1" />

        <!--android:text="1234"-->

        <CheckBox
            android:id="@+id/chk_remember_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Remember Me"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/textsize2"
            android:padding="@dimen/padding1" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding1"
            android:text="Login"
            android:textColor="#FFFFFF"

            android:background="@drawable/button_back"
            android:gravity="center"
            android:textSize="@dimen/textsize2"/>


        <Button
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding1"
            android:layout_marginTop="@dimen/textsize1"
            android:text="Signup"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_back"
            android:gravity="center"
            android:textSize="@dimen/textsize2"/>



        <TextView
            android:id="@+id/version_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding1"
            android:text="Version 1.0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="right|center"
            android:textSize="@dimen/textsize2"/>


    </LinearLayout>

</RelativeLayout>
